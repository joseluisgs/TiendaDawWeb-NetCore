@model TiendaDawWeb.Models.Purchase
@{
    ViewData["Title"] = $"Detalle de Compra #{Model.Id}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-receipt"></i> Pedido #@Model.Id
        </h1>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Mis Compras
        </a>
    </div>

    <div class="row">
        <!-- Información de la compra -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Información del Pedido
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">Fecha de Compra</h6>
                            <p class="mb-0">
                                <i class="bi bi-calendar-event"></i> 
                                @Model.FechaCompra.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">Estado</h6>
                            <p class="mb-0">
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Completado
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">Comprador</h6>
                            <p class="mb-0">
                                <i class="bi bi-person"></i> 
                                @Model.Comprador.Nombre @Model.Comprador.Apellidos
                            </p>
                            <p class="small text-muted mb-0">@Model.Comprador.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted">Total Pagado</h6>
                            <p class="mb-0 text-success fs-4 fw-bold">
                                @Model.Total.ToString("C")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Productos -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-box-seam"></i> Productos (@Model.Products.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Vendedor</th>
                                    <th>Categoría</th>
                                    <th class="text-end">Precio</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@producto.ImagenOrDefault" 
                                                     alt="@producto.Nombre" 
                                                     class="rounded me-2"
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <div>
                                                    <strong>@producto.Nombre</strong>
                                                    <br>
                                                    <small class="text-muted">@producto.Descripcion</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <i class="bi bi-shop"></i> 
                                            @producto.Propietario.UserName
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@producto.Categoria</span>
                                        </td>
                                        <td class="text-end">
                                            <strong class="text-success">@producto.Precio.ToString("C")</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end">
                                        <strong class="text-success fs-5">@Model.Total.ToString("C")</strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <!-- Acciones -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("DownloadPdf", new { id = Model.Id })" 
                           class="btn btn-danger">
                            <i class="bi bi-file-pdf"></i> Descargar Factura (PDF)
                        </a>
                        <button class="btn btn-outline-primary" onclick="window.print()">
                            <i class="bi bi-printer"></i> Imprimir
                        </button>
                        <a href="#" class="btn btn-outline-secondary">
                            <i class="bi bi-envelope"></i> Reenviar Email
                        </a>
                    </div>
                </div>
            </div>

            <!-- Información de envío -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-truck"></i> Información de Envío
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-success mb-0">
                        <h6><i class="bi bi-check-circle"></i> Envío Completado</h6>
                        <p class="small mb-2">
                            Los productos han sido entregados al comprador.
                        </p>
                        <p class="small mb-0">
                            <strong>Método:</strong> Envío estándar (3-5 días)
                        </p>
                    </div>
                </div>
            </div>

            <!-- Resumen financiero -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Resumen Financiero</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>@Model.Total.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>IVA (incluido):</span>
                        <span>@((Model.Total * 0.21m).ToString("C"))</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Envío:</span>
                        <span class="text-success">GRATIS</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <strong class="text-success">@Model.Total.ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@media print {
            .btn, .card-header, nav { display: none !important; }
        }
    </style>
}
