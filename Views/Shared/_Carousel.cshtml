@* Carousel component - matches Spring Boot original *@
<div id="carouselWalaDaw" class="carousel slide mb-4" data-bs-ride="carousel">
    <!-- Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselWalaDaw" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselWalaDaw" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselWalaDaw" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <!-- Slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slider01.jpg" class="d-block w-100" alt="Slide 1" 
                 onerror="this.src='~/images/fondo.jpg'" 
                 style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2 class="fw-bold">Bienvenido a WalaDaw</h2>
                <p class="lead">Tu marketplace de segunda mano de confianza</p>
                <a href="@Url.Action("Index", "Public")" class="btn btn-primary btn-lg btn-min-block">
                    <i class="bi bi-shop"></i> Explorar Productos
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider02.jpg" class="d-block w-100" alt="Slide 2" 
                 onerror="this.src='~/images/fondo.jpg'" 
                 style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2 class="fw-bold">Compra y Vende</h2>
                <p class="lead">Los mejores productos tech de segunda mano</p>
                <a href="@Url.Action("Create", "Product")" class="btn btn-success btn-lg btn-min-block">
                    <i class="bi bi-plus-circle"></i> Vender Ahora
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider03.jpg" class="d-block w-100" alt="Slide 3" 
                 onerror="this.src='~/images/fondo.jpg'" 
                 style="height: 400px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2 class="fw-bold">Comunidad de Confianza</h2>
                <p class="lead">Miles de usuarios satisfechos</p>
                <a href="@Url.Action("Register", "Auth")" class="btn btn-warning btn-lg btn-min-block">
                    <i class="bi bi-person-plus"></i> Ãšnete Ahora
                </a>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselWalaDaw" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselWalaDaw" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>
