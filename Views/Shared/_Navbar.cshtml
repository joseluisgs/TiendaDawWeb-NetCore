@using Microsoft.AspNetCore.Identity
@using TiendaDawWeb.Models
@using TiendaDawWeb.Services.Interfaces
@using Microsoft.Extensions.Localization
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject ICarritoService CarritoService
@inject IStringLocalizer<TiendaDawWeb.Resources.Messages> Localizer

@{
    var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
    var cartCount = 0;
    if (currentUser != null)
    {
        var cartCountResult = await CarritoService.GetCarritoCountAsync(currentUser.Id);
        cartCount = cartCountResult.IsSuccess ? cartCountResult.Value : 0;
    }
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Public" asp-action="Index">
            <img src="~/images/logo.svg" alt="Logo" class="d-inline-block align-text-top" height="30">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Public" asp-action="Index">
                        <i class="bi bi-house-door"></i> @Localizer["Home"]
                    </a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="MyProducts">
                            <i class="bi bi-bag"></i> @Localizer["MyProducts"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Purchase" asp-action="MyPurchases">
                            <i class="bi bi-receipt"></i> @Localizer["MyPurchases"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Favorite" asp-action="Index">
                            <i class="bi bi-heart"></i> @Localizer["Nav.Favorites"]
                        </a>
                    </li>
                    @* Admin dropdown if isAdmin *@
                    @if (currentUser?.Rol == "ADMIN")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-shield-check"></i> @Localizer["Nav.Admin"]
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2"></i> @Localizer["Dashboard"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Usuarios">
                                        <i class="bi bi-people"></i> @Localizer["Users"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Productos">
                                        <i class="bi bi-box-seam"></i> @Localizer["Products"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Ventas">
                                        <i class="bi bi-cash-stack"></i> @Localizer["Sales"]
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                }
            </ul>

            <form action="@Url.Action("Index", "Public")" class="d-flex me-3" method="get" role="search">
                <input class="form-control" name="q" placeholder="@Localizer["SearchProducts"]" type="search" value="@ViewBag.Search">
                <button class="btn btn-outline-light ms-2" type="submit"><i class="bi bi-search"></i></button>
            </form>

            <ul class="navbar-nav">
                @* Language Switcher *@
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-globe"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="?lang=es">
                                <img src="https://flagcdn.com/w20/es.png" width="20" alt="ES"> Espa√±ol
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="?lang=en">
                                <img src="https://flagcdn.com/w20/gb.png" width="20" alt="EN"> English
                            </a>
                        </li>
                    </ul>
                </li>

                @if (SignInManager.IsSignedIn(User) && currentUser != null)
                {
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-controller="Carrito" asp-action="Index">
                            <i class="bi bi-cart3"></i> @Localizer["Cart"]
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @cartCount
                                    <span class="visually-hidden">productos en carrito</span>
                                </span>
                            }
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> @(currentUser.Nombre ?? "Usuario")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">@(currentUser.Rol ?? "USER")</h6></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person"></i> @Localizer["Nav.Profile"]
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                                    <i class="bi bi-box-arrow-right"></i> @Localizer["Logout"]
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">
                            <i class="bi bi-person"></i> @Localizer["Login"]
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Auth" asp-action="Logout" id="logoutForm" method="post" style="display: none;">
    </form>
}
