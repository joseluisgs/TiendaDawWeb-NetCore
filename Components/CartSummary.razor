@using TiendaDawWeb.Services.Interfaces
@inject ICarritoService CarritoService

<div class="cart-summary">
    @if (IsLoading)
    {
        <span class="spinner-border spinner-border-sm" role="status">
            <span class="visually-hidden">Cargando...</span>
        </span>
    }
    else
    {
        <a href="/app/carrito" class="btn btn-outline-primary position-relative" title="Ver carrito">
            <i class="bi bi-cart3" style="font-size: 1.2rem;"></i>
            @if (ItemCount > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @ItemCount
                    <span class="visually-hidden">items en carrito</span>
                </span>
            }
        </a>
        
        @if (ShowDetails && ItemCount > 0)
        {
            <div class="cart-summary-details mt-2">
                <div class="card shadow-sm" style="min-width: 250px;">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="bi bi-cart-check"></i> Carrito de Compras
                        </h6>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Productos:</span>
                            <strong>@ItemCount</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <strong class="text-success">@TotalPrice.ToString("C")</strong>
                        </div>
                        <a href="/app/carrito" class="btn btn-primary w-100 btn-sm">
                            <i class="bi bi-eye"></i> Ver Carrito
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public long UserId { get; set; }

    [Parameter]
    public bool ShowDetails { get; set; } = false;

    [Parameter]
    public int RefreshInterval { get; set; } = 5000; // 5 seconds

    private int ItemCount { get; set; } = 0;
    private decimal TotalPrice { get; set; } = 0;
    private bool IsLoading { get; set; } = true;
    private System.Threading.Timer? _timer;

    protected override async Task OnInitializedAsync()
    {
        await LoadCartSummary();
        
        // Setup auto-refresh if interval is set
        if (RefreshInterval > 0)
        {
            _timer = new System.Threading.Timer(async _ =>
            {
                await InvokeAsync(async () =>
                {
                    await LoadCartSummary();
                    StateHasChanged();
                });
            }, null, RefreshInterval, RefreshInterval);
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (UserId > 0)
        {
            await LoadCartSummary();
        }
    }

    private async Task LoadCartSummary()
    {
        if (UserId == 0)
        {
            ItemCount = 0;
            TotalPrice = 0;
            IsLoading = false;
            return;
        }

        var result = await CarritoService.GetCarritoByUsuarioIdAsync(UserId);
        if (result.IsSuccess)
        {
            var carrito = result.Value;
            ItemCount = carrito.Count();
            TotalPrice = carrito.Sum(item => item.Subtotal);
        }
        else
        {
            ItemCount = 0;
            TotalPrice = 0;
        }

        IsLoading = false;
        StateHasChanged();
    }

    public async Task RefreshCart()
    {
        await LoadCartSummary();
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}

<style>
    .cart-summary {
        display: inline-block;
    }

    .cart-summary-details {
        position: absolute;
        right: 0;
        z-index: 1050;
    }
</style>
