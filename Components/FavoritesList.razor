@using TiendaDawWeb.Services.Interfaces
@using TiendaDawWeb.Models
@inject IFavoriteService FavoriteService
@inject NavigationManager NavigationManager

<div class="favorites-list">
    @if (IsLoading)
    {
        <div class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando favoritos...</p>
        </div>
    }
    else if (Favorites == null || !Favorites.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-heart"></i> No tienes productos favoritos a√∫n.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var favorite in Favorites)
            {
                var product = favorite.Producto;
                if (product != null)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(product.Imagen))
                            {
                                <img src="@product.Imagen" class="card-img-top" alt="@product.Nombre" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Nombre</h5>
                                <p class="card-text text-muted">
                                    @(product.Descripcion?.Length > 100 ? product.Descripcion.Substring(0, 100) + "..." : product.Descripcion)
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">@product.Categoria</span>
                                    <strong class="text-success">@product.Precio.ToString("C")</strong>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex gap-2">
                                    <a href="/app/productos/@product.Id" class="btn btn-primary btn-sm flex-grow-1">
                                        <i class="bi bi-eye"></i> Ver Detalles
                                    </a>
                                    <button class="btn btn-danger btn-sm" @onclick="() => RemoveFavorite(favorite.Id)">
                                        <i class="bi bi-heart-fill"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public long UserId { get; set; }

    private List<Favorite>? Favorites { get; set; }
    private bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadFavorites();
    }

    private async Task LoadFavorites()
    {
        IsLoading = true;
        StateHasChanged();

        var result = await FavoriteService.GetUserFavoritesAsync(UserId);
        if (result.IsSuccess)
        {
            // Get favorites with products loaded - need to convert from Product list to Favorite list
            // Since GetUserFavoritesAsync returns IEnumerable<Product>, we need a different approach
            // We'll create temporary Favorite objects for display
            var products = result.Value.ToList();
            Favorites = products.Select(p => new Favorite 
            { 
                Id = p.Id, // Using product ID as favorite ID for this display component
                ProductoId = p.Id, 
                Producto = p,
                UsuarioId = UserId
            }).ToList();
        }
        else
        {
            Favorites = new List<Favorite>();
        }

        IsLoading = false;
        StateHasChanged();
    }

    private async Task RemoveFavorite(long favoriteId)
    {
        var favorite = Favorites?.FirstOrDefault(f => f.Id == favoriteId);
        if (favorite != null)
        {
            var result = await FavoriteService.RemoveFavoriteAsync(UserId, favorite.ProductoId);
            if (result.IsSuccess)
            {
                await LoadFavorites();
            }
        }
    }
}
