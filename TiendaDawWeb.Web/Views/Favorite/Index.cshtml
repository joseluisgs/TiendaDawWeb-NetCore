@using System.Globalization
@using Microsoft.Extensions.Localization
@model IEnumerable<Product>
@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = "Mis Favoritos";
}

<div class="row mb-4">
    <div class="col">
        <h1><i class="bi bi-heart-fill text-danger"></i> Mis Favoritos</h1>
        <p class="lead">Aquí encontrarás todos los productos que has marcado como favoritos</p>
    </div>
</div>

<div class="row">
    @if (Model.Any()) {
        @foreach (var producto in Model) {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@producto.ImagenOrDefault" class="card-img-top" alt="@producto.Nombre"
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@producto.Nombre</h5>
                        <p class="card-text flex-grow-1">
                            @{
                                var descripcion = producto.Descripcion ?? "";
                                var maxLength = Math.Min(descripcion.Length, 100);
                                var wasTruncated = descripcion.Length > 100;
                            }
                            @descripcion.Substring(0, maxLength)@(wasTruncated ? "..." : "")
                        </p>
                        <div class="mb-2">
                            <span class="badge bg-secondary">@SharedLocalizer[$"Category.{producto.Categoria}"]</span>
                            @if (producto.Ratings.Any()) {
                                <span>
                                    @for (var i = 1; i <= 5; i++) {
                                        if (i <= Math.Floor(producto.RatingPromedio)) {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else if (i - producto.RatingPromedio < 1 && producto.RatingPromedio % 1 >= 0.5) {
                                            <i class="bi bi-star-half text-warning"></i>
                                        }
                                        else {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                    <span class="ms-1 fw-bold">@producto.RatingPromedio.ToString("0.0")</span>
                                    <span class="text-muted ms-1">(@producto.Ratings.Count)</span>
                                </span>
                            }
                        </div>
                        <h4 class="text-primary mb-3">
                            @producto.Precio.ToString("C", new CultureInfo("es-ES"))
                        </h4>
                        <div class="d-flex gap-2">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@producto.Id"
                               class="btn btn-primary flex-grow-1">
                                <i class="bi bi-eye"></i> Ver Detalle
                            </a>
                            <button type="button"
                                    class="btn btn-outline-danger"
                                    onclick="removeFavorite(@producto.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No tienes productos favoritos todavía.
                <a asp-controller="Product" asp-action="Index" class="alert-link">
                    Explora el catálogo para añadir tus primeros favoritos
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function removeFavorite(productId) {
            if (!confirm('¿Estás seguro de que quieres eliminar este producto de tus favoritos?')) {
                return;
            }

            try {
                const response = await fetch('/api/favorites/' + productId, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    // Recargar la página para mostrar los cambios
                    window.location.reload();
                } else {
                    const data = await response.json();
                    alert(data.message || 'Error al eliminar el favorito. Por favor, intenta de nuevo.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar el favorito. Por favor, intenta de nuevo.');
            }
        }
    </script>
}

